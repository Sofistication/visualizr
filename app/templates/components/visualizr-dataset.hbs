<div class="form-group">
  <label for="graph-color">Graph color</label>
  {{input type="text"
          class="form-control"
          id="graph-color"
          placeholder="Enter a hex code!"
          value=newViz.color}}
</div>
<button class="btn btn-info btn-sm" {{action "save" dataset on="click"}}>Save</button>

{{visualizr-dataset/graph dataset=dataset color=newViz.color}}
